{
  "name": "toyproject",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev:basic-state": "turbo dev --filter basic-state",
    "dev:effect-master": "turbo dev --filter effect-master",
    "dev:props-drilling": "turbo dev --filter props-drilling",
    "dev:redux-only": "turbo dev --filter redux-only",
    "dev:hybrid-state": "turbo dev --filter hybrid-state"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.3.3",
    "typescript": "5.5.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.15.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
